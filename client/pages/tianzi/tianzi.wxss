/* pages/tianzi.wxss */
.page{
 background-image:url(back.jpg);
 border-collapse:  collapse;
 justify-content: center;
}
.title{
  display: flex;
  padding:5px;
  font-size: 15px;
  align-items: center;
  justify-content: space-between;
  color: dimgray;
  border-bottom-width:1px; 
  border-bottom-color:  darkgray;
  border-bottom-style:  solid;
}
.box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300px;

  border-collapse:  collapse;
}
.box-row{
  display: flex;
  flex-direction: row;
}
.box-item{
  width:25px;
  height:25px;
  background-color: black;
  border-width:  1px;
  margin-right:-1px;
  margin-bottom:-1px;
  border-color:  black;
  border-style:  solid;

}
.box-item1{
  display: flex;
  justify-content: center;
  align-items:center; 
  width:25px;
  height:25px;
  background-color:   silver;
  border-width:  1px;
  margin-right:-1px;
  margin-bottom:-1px;
  border-color:  darkgray;
  border-style:  solid;

    
}
.box-item2{
  display: flex;
  width:25px;
  height:25px;  
  border-width: 1px;
  margin-right:-1px;
  margin-bottom:-1px;
  border-color:  darkgray;
  border-style: solid;
  background-color:whitesmoke;
  justify-content: center;
  align-items:center; 

}

.range_text{
   color:black;
   font-size: 15px;
 
}
.question-title{
  height: 15px;
  font-size:16px;
  color:   dimgray;
  padding-left: 10px;
  padding-top: 5px;
}
.question{
  display: flex;
  flex-direction: column;
  height: 120px;
  padding:5px;
  border-bottom-width:1px; 
  border-bottom-color:  darkgray;
  border-bottom-style:  solid;
}
.question-text{
  padding:5px;
  font-size:15px;
  color:   dimgray;
  
}
.question_glxs{
   padding:3px;
   font-size:15px;
   font-weight:  bolder;
   color:red;
}
.input-box{
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;


}

.input-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding:0,16px,0px,0px;
  height: 30px;

}
.input-item-blink{
  height: 20px;
  width:15px;
  border-left-color:dimgray;
  border-left-width: 1px;
  animation-name:blink;
  animation-duration:1s;
  animation-iteration-count: infinite;
}
@keyframes blink
{0%   {border-left-style:solid}
100% {border-left-style: white;}
}
.input-item{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 25px;
  width: 25px;
  margin-left: 10px;
  border-bottom-color:dimgray;
  border-bottom-width: 1px;
  border-bottom-style:solid;
  font-size: 15px;
  color: dimgray;
}



.input-question  {
  display: flex;
  height: 60px;
  align-items: center;
  justify-content: center;
  color:red;
  font-size: 16px;
  border-bottom-style: solid,1px;
}
.jianpan{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height:180px;
  padding-top: 5px;
  background-color:whitesmoke;
}
.jianpan-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.zimu{
  display: flex;
  border-radius:5px;
  margin:3px; 
  align-items: center;
  justify-content: center;
  background-color: white; 
  width: 30px;
  height: 35px;
  font-size: 18px;
}
.gongneng{
  display: flex;
  border-radius:5px;
  margin: 2px; 
  align-items: center;
  justify-content: center;
  background-color:  gainsboro; 
  width: 60px;
  height: 35px;
  font-size: 16px;
}